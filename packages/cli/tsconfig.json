{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@llmux/core": [
        "../core/src"
      ],
      "@llmux/core/*": [
        "../core/src/*"
      ],
      "@llmux/auth": [
        "../auth/src"
      ],
      "@llmux/auth/*": [
        "../auth/src/*"
      ],
      "@llmux/server": [
        "../server/src"
      ],
      "@llmux/server/*": [
        "../server/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}