{
  "name": "@llmux/cli",
  "version": "0.1.0",
  "description": "CLI for llmux - LLM Provider Proxy",
  "type": "module",
  "bin": {
    "llmux": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bunup ./src/index.ts --dts",
    "dev": "bun run ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@llmux/auth": "workspace:*",
    "@llmux/core": "workspace:*",
    "@llmux/server": "workspace:*",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/yargs": "^17.0.33",
    "bunup": "^0.16.11",
    "typescript": "^5.9.3"
  }
}
