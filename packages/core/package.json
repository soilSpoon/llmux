{
  "name": "@llmux/core",
  "version": "0.1.0",
  "description": "LLM Provider Proxy Library - Bidirectional transformation between AI providers",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./src/providers/index.ts"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./src/types/index.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bunup src/index.ts --dts",
    "typecheck": "tsc --noEmit",
    "typecheck:only": "tsc --noEmit",
    "test": "bun test",
    "lint": "biome lint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "llm",
    "ai",
    "openai",
    "anthropic",
    "gemini",
    "claude",
    "proxy",
    "transform",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@ai-sdk/provider": "^3.0.0",
    "@types/bun": "^1.3.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {}
}
