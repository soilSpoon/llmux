{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@llmux/core": [
        "../core/src"
      ],
      "@llmux/core/*": [
        "../core/src/*"
      ],
      "@llmux/auth": [
        "../auth/src"
      ],
      "@llmux/auth/*": [
        "../auth/src/*"
      ]
    },
    "types": [
      "bun"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}