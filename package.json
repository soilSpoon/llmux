{
  "name": "llmux-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "typecheck": "bun run build && bun run --filter '*' typecheck:only",
    "test": "bun run --filter '*' test",
    "lint": "biome lint packages/*/src",
    "lint:fix": "biome lint --write packages/*/src",
    "format": "biome format --write packages/*/src",
    "format:check": "biome format packages/*/src",
    "check": "biome check packages/*/src",
    "check:fix": "biome check --write packages/*/src",
    "clean": "rm -rf packages/*/dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^3.0.1",
    "@ai-sdk/openai": "^3.0.1",
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.4",
    "ai": "^6.0.3",
    "bunup": "^0.16.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "pino": "^10.1.0"
  }
}
